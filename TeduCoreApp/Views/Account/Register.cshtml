@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
@using PaulMiami.AspNetCore.Mvc.Recaptcha
<h2>@ViewData["Title"]</h2>


<!-- Breadcrumbs -->

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Home</a><span>&raquo;</span></li>
                    <li><strong>Register</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="col-md-3 col-sm-2"></div>
                <div class="col-md-6 col-sm-8">
                    <div class="single-input p-bottom50 clearfix">
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="check-title">
                                        <h4>Create a new account.</h4>
                                        <hr />
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="FullName">Full Name:</label>
                                    <div class="input-text">
                                        <input type="text" name="FullName" asp-for="FullName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="Email">Full Name:</label>
                                    <div class="input-text">
                                        <input type="text" name="Email" asp-for="Email" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label asp-for="Address">Address:</label>
                                    <div class="input-text">
                                        <input type="text" asp-for="Address" name="Address" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <label>Password:</label>
                                    <div class="input-text">
                                        <input type="password" asp-for="Password" name="Password" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label>ConfirmPassword:</label>
                                    <div class="input-text">
                                        <input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label>BirthDay:</label>
                                    <div class="input-text">
                                        <input type="date" asp-for="BirthDay" name="BirthDay" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label>PhoneNumber:</label>
                                    <div class="input-text">
                                        <input type="text" asp-for="PhoneNumber" name="PhoneNumber" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label>Avatar:</label>
                                    <div class="input-text">
                                        <input type="file" asp-for="Avatar" name="Avatar" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="col-md-offset-2 col-md-10">
                                        <recaptcha />
                                        <span class="text-danger" id="recaptchaErrorMessage"></span>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="billing-checkbox">
                                        <input type="checkbox" value="forever" id="rememberme" name="rememberme">
                                        Sign up for our newsletter!
                                    </div>
                                    <div class="submit-text">
                                        <button type="submit" class="button"><i class="fa fa-user"></i>&nbsp; <span>Register</span></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />
}
