@{
    ViewData["Title"] = "Index";
}
@section Style
{
    <link href="~/lib/jquery-easyui-1.9.4/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jquery-easyui-1.9.4/themes/icon.css" rel="stylesheet" />

}
@section Scripts
{
    <script src="~/lib/jquery-easyui-1.9.4/jquery.easyui.min.js"></script>
    <script src="~/App/Controller/product-category/index.js" asp-append-version="true"></script>
    <script src="~/App/Shared/tedu.js"></script>
    <script>
        var productCategory = new productCategoryController();
        productCategory.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3>Product Categories<small>List product categories</small></h3>
    </div>

    <div class="title_right">
        <div class="col-md-4 col-sm-4 col-xs-4 form-group pull-right top_search">
            <button class="btn btn-success" id="btnCreate" type="button">Create</button>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <ul id="treeProductCategory"></ul>
                <div id="contextMenu" class="easyui-menu" style="width: 120px">
                    <div id="btnEdit" data-options="iconCls:'icon-edit'"> Edit</div>
                    <div id="btnDelete" data-options="iconCls:'icon-remove'"> Delete</div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_AddEditModal.cshtml");